{
  "name": "tsp-algorithms",
  "version": "0.6.0",
  "description": "TSP Solver - Efficient algorithms for the Traveling Salesman Problem with visualization",
  "type": "module",
  "main": "src/lib/index.js",
  "types": "src/lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./src/lib/index.d.ts",
      "import": "./src/lib/index.js"
    },
    "./algorithms": {
      "types": "./src/lib/algorithms/index.d.ts",
      "import": "./src/lib/algorithms/index.js"
    }
  },
  "scripts": {
    "dev": "bun run build && bun --hot serve",
    "build": "bun run build:app",
    "build:app": "bun build src/app/main.jsx --outdir dist --minify --target browser",
    "serve": "bun serve.js",
    "test:e2e": "bun test src/tests/e2e/",
    "test": "bun test",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check:duplication": "jscpd .",
    "check": "bun run lint && bun run format:check && bun run check:duplication",
    "prepare": "husky || true",
    "changeset": "changeset",
    "changeset:version": "bun scripts/changeset-version.mjs",
    "changeset:publish": "changeset publish",
    "changeset:status": "changeset status --since=origin/main"
  },
  "keywords": [
    "tsp",
    "traveling-salesman",
    "algorithms",
    "visualization",
    "moore-curve",
    "sonar-algorithm",
    "optimization"
  ],
  "author": "",
  "license": "Unlicense",
  "repository": {
    "type": "git",
    "url": "https://github.com/konard/tsp"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@happy-dom/global-registrator": "^20.4.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "browser-commander": "^0.5.4",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "happy-dom": "^20.4.0",
    "husky": "^9.1.7",
    "jscpd": "^4.0.5",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.6",
    "playwright": "^1.58.0",
    "prettier": "^3.6.2"
  },
  "dependencies": {
    "@chakra-ui/react": "^3.31.0",
    "@emotion/react": "^11.14.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "lint-staged": {
    "*.{js,mjs,cjs,jsx}": [
      "eslint --fix --max-warnings 0 --no-warn-ignored",
      "prettier --write",
      "prettier --check"
    ],
    "*.md": [
      "prettier --write",
      "prettier --check"
    ]
  }
}
